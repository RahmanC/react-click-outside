  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "rollup": "^4.17.2",
